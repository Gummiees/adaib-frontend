{
  "name": "asociacion-deportes",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build && npm run sentry:sourcemaps",
    "watch": "ng build --watch --configuration development",
    "stylelint": "stylelint \"src/**/*.scss\"",
    "lint": "ng lint && npm run stylelint",
    "lint:fix": "ng lint --fix && npm run stylelint --fix",
    "test": "npm run lint && jest",
    "test:coverage": "jest --coverage",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org basket-web --project basket-project ./dist && sentry-cli sourcemaps upload --org basket-web --project basket-project ./dist",
    "prepare": "husky",
    "lint:staged": "ng lint asociacion-deportes"
  },
  "engines": {
    "node": ">= 22.12.0"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{ts,html}": [
      "node lint-staged.js"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@angular/cdk": "^20.2.2",
    "@angular/common": "^20.2.4",
    "@angular/compiler": "^20.2.4",
    "@angular/core": "^20.2.4",
    "@angular/forms": "^20.2.4",
    "@angular/material": "^20.2.2",
    "@angular/platform-browser": "^20.2.4",
    "@angular/router": "^20.2.4",
    "@fortawesome/angular-fontawesome": "^3.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@ngrx/operators": "^20.0.1",
    "@ngrx/signals": "^20.0.1",
    "@ngrx/store": "^20.0.1",
    "@ngrx/store-devtools": "^20.0.1",
    "@sentry/angular": "^10.10.0",
    "@sentry/cli": "^2.53.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/template-parser": "^20.2.0",
    "@angular/build": "^20.2.2",
    "@angular/cli": "^20.2.2",
    "@angular/compiler-cli": "^20.2.4",
    "@ngrx/eslint-plugin": "^20.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "angular-eslint": "20.2.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-preset-angular": "^15.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.42.0"
  }
}
